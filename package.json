{
    "name": "settings-manager-chrome-extension",
    "version": "1.0.4",
    "description": "A backing repository for settings-manager, falling on chrome.storage.sync as an implementation.",
    "author": "John Ghidiu",
    "homepage": "https://github.com/hal313/settings-manager-chrome-extension",
    "scripts": {
        "test": "jest --testPathPattern=source.spec.js",
        "test:all": "jest",
        "test:watch": "jest --watch --testPathPattern=source.spec.js",
        "dist": "grunt dist && jest",
        "coverage": "jest --coverage --testPathPattern=spec.js"
    },
    "jest": {
        "verbose": true,
        "coverageDirectory": "build/coverage",
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 100,
                "lines": 90,
                "statements": -10
            }
        },
        "collectCoverageFrom": [
            "src/*.{js,jsx}",
            "dist/*.{js,jsx}",
            "!**/node_modules/**",
            "!**/vendor/**"
        ]
    },
    "auto-changelog": {
        "unreleased": false,
        "commitLimit": false
    },
    "devDependencies": {
        "auto-changelog": "^1.7.1",
        "jest": "^23.1.0"
    },
    "main": "dist/ChromeExtensionSettingsManager.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/hal313/settings-manager-chrome-extension.git"
    },
    "keywords": [
        "chrome",
        "extension",
        "settings-manager",
        "chrome.storage.sync"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/hal313/settings-manager-chrome-extension/issues"
    },
    "dependencies": {
        "grunt": "^1.0.3",
        "grunt-bump": "^0.8.0",
        "grunt-contrib-copy": "^1.0.0",
        "grunt-contrib-jshint": "^1.1.0",
        "grunt-contrib-uglify": "^3.3.0"
    }
}
